                    <m:msqrt>
                      <m:mrow>
                        <m:mn>1</m:mn>
                        <m:mo stretchy="false">−</m:mo>
                        <m:mfrac>
                          <m:mrow>
                            <m:mo stretchy="false">(</m:mo>
                            <m:mn>0</m:mn>
                            <m:mtext>.</m:mtext>
                            <m:mtext>750</m:mtext>
                            <m:mi>c</m:mi>
                            <m:msup>
                              <m:mo stretchy="false">)</m:mo>

                                <m:mrow>
                                  <m:mn>2</m:mn>
