                  <m:mo stretchy="false">=</m:mo>
                  <m:msub>
                    <m:mi>v</m:mi>
                    <m:mrow>
                      <m:mn>1</m:mn>
                    </m:mrow>
                  </m:msub>
                </m:mrow><m:mspace width="0.25em"/>
                <m:mtext> cos </m:mtext><m:mspace width="0.25em"/>
                <m:mrow>
                  <m:msub>
                    <m:mi>θ</m:mi>
                    <m:mrow>
                      <m:mn>1</m:mn>
                    </m:mrow>
                  </m:msub>
                  <m:mo stretchy="false">+</m:mo>
                  <m:msub>
                    <m:mi>v</m:mi>
                    <m:mrow>
                      <m:mn>2</m:mn>
                    </m:mrow>
                  </m:msub>
                </m:mrow><m:mspace width="0.25em"/>
                <m:mtext> cos </m:mtext><m:mspace width="0.25em"/>
                <m:msub>
                  <m:mi>θ</m:mi>
                  <m:mrow>
                    <m:mn>2</m:mn>
                  </m:mrow>
                </m:msub>
              </m:mrow>
            </m:mrow>
          </m:mrow>

      </m:math>
    </equation>
<para id="eip-id2705075">and</para>

<equation id="eip-id1899459"><m:math>

