            </m:mrow>
            <m:annotation encoding="StarMath 5.0"> size 12{ { bar  {v}}= {  {Δx'}  over  {Δt} } = left ( {  { - 1 "." "50"`"km"}  over  {5 "." "00"`"min"} }  right ) left ( {  {"60"`"min"}  over  {1`h} }  right )= - "18" "." 0`"km/h"} {}</m:annotation>
