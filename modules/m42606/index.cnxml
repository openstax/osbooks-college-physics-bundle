<metadata xmlns:md="http://cnx.rice.edu/mdml">
  <md:content-id>m42606</md:content-id>
  <md:title>The Wave Nature of Matter Causes Quantization</md:title>
  <md:abstract/>
  <md:uuid>aedd88f0-3f74-4137-b2f1-67af8b4d7832</md:uuid>
