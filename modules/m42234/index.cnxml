                                    </m:mrow>

                                </m:msup>
                              </m:mrow><m:mspace width="0.25em"/>
                              <m:mtext>J</m:mtext>
                            </m:mrow>
                            <m:mrow>
                              <m:mn>2</m:mn>
                              <m:mtext>.</m:mtext>
