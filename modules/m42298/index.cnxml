                              </m:mrow>
                            </m:mfenced>

                              <m:mrow>
                                <m:mn>2</m:mn>
                              </m:mrow>

                          </m:msup>
                          <m:msup>
                            <m:mfenced open="(" close=")">
                              <m:mrow>
                                <m:msub>
                                  <m:mi>Z</m:mi>

                                    <m:mrow>
                                      <m:mn>1</m:mn>
                                    </m:mrow>

                                </m:msub>
                                <m:mo stretchy="false">+</m:mo>
                                <m:msub>
                                  <m:mi>Z</m:mi>

                                    <m:mrow>
                                      <m:mn>2</m:mn>
                                    </m:mrow>

                                </m:msub>
                              </m:mrow>
                            </m:mfenced>

                              <m:mrow>
                                <m:mn>2</m:mn>
                              </m:mrow>

                          </m:msup>
                        </m:mfrac>
                      </m:mrow>
                      <m:mo stretchy="false">=</m:mo>
                      <m:mfrac>
                        <m:msup>
                          <m:mfenced open="(" close=")">
                            <m:mrow>
                              <m:mn>1</m:mn>
                              <m:mtext>.</m:mtext>
                              <m:mrow>
                                <m:mtext>34</m:mtext>
                                <m:mo stretchy="false">×</m:mo>
                                <m:msup>
                                  <m:mtext>10</m:mtext>

                                    <m:mrow>
                                      <m:mn>6</m:mn>
                                    </m:mrow>

                                </m:msup>
                              </m:mrow><m:mspace width="0.25em"/>
                              <m:msup>
                                <m:mtext>kg/(m</m:mtext>

                                  <m:mrow>
                                    <m:mtext>2</m:mtext>
                                  </m:mrow>

                              </m:msup>
                              <m:mrow>
                                  <m:mi> · s)</m:mi>

                                <m:mo stretchy="false">−</m:mo>
                                <m:mn>1.70</m:mn>
                                <m:mo stretchy="false">×</m:mo>
                                <m:msup>
                                  <m:mtext>10</m:mtext>

                                    <m:mrow>
