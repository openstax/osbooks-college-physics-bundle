     <m:mrow>
      <m:mi>M</m:mi><m:msup>
       <m:mi>R</m:mi>
       <m:mn>2</m:mn>
      </m:msup>
      
     </m:mrow>
     <m:mn>2</m:mn>
    </m:mfrac>
    
   </m:mrow>
