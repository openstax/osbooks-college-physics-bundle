                                          </m:mrow>
  
  
                                    </m:mrow>
  
                                </m:msub>
  </m:mtd>
  <m:mtd>
                                <m:mo stretchy="false">=</m:mo>
  </m:mtd>
  <m:mtd>
  
                                    <m:msub>
                                      <m:mi>T</m:mi>
  
                                        <m:mrow>
  
                                            <m:mtext>L</m:mtext>
  
                                              <m:mrow>
