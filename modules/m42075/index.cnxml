                                              </m:mrow> </m:mrow>
                                    </m:msub>
  
                                  <m:mo stretchy="false">−</m:mo>
                                  <m:mi>w</m:mi>
  
  
                              <m:mo stretchy="false">=</m:mo>
                              <m:mn>0</m:mn>
  
  
  
  
  
  </m:mtd>
                    </m:mtr>
                    <m:mtr>
  
  <m:mtd>
  
                          <m:msub>
                            <m:mi>F</m:mi>
  
                              <m:mrow>
                                  <m:mtext>net </m:mtext>
  
                                    <m:mrow>
                                      <m:mi>y</m:mi>
                                    </m:mrow>
  
                              </m:mrow>
  
                          </m:msub>
  </m:mtd>
  <m:mtd>
                          <m:mo stretchy="false">=</m:mo>
  </m:mtd>
  <m:mtd>
                          <m:mi>T</m:mi><m:mspace width="0.25em"/>
  
                        <m:mtext>sin</m:mtext><m:mspace width="0.25em"/>
                        <m:mo stretchy="false">(</m:mo>
                        <m:mn>5.0º</m:mn>
                        <m:mrow>
                          <m:mo stretchy="false">)</m:mo>
                          <m:mo stretchy="false">+</m:mo>
                          <m:mi>T</m:mi><m:mspace width="0.25em"/>
                        </m:mrow>
                        <m:mtext>sin</m:mtext><m:mspace width="0.25em"/>
                        <m:mo stretchy="false">(</m:mo>
                        <m:mn>5.0º</m:mn>
                        <m:mrow>
                          <m:mrow>
                            <m:mo stretchy="false">)</m:mo>
                            <m:mo stretchy="false">−</m:mo>
                            <m:mi>w</m:mi>
                          </m:mrow>
                          <m:mo stretchy="false">=</m:mo>
                          <m:mn>0</m:mn>
                        </m:mrow>
  
  </m:mtd>
                    </m:mtr>
                    <m:mtr>
  
  <m:mtd>
  
                        <m:mn>2</m:mn><m:mspace width="0.25em"/>
  <m:mi>T</m:mi><m:mspace width="0.25em"/>
                        <m:mtext>sin</m:mtext><m:mspace width="0.25em"/>
                        <m:mo stretchy="false">(</m:mo>
                        <m:mn>5.0º</m:mn>
  
                          <m:mrow>
                            <m:mo stretchy="false">)</m:mo>
                            <m:mo stretchy="false">−</m:mo>
                            <m:mi>w</m:mi>
