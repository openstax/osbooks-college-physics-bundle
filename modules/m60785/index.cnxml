                          </m:mrow>
                        </m:mrow>
                      
                    </m:msup>
                  </m:mrow>
                <m:mspace width="0.25em"/>
                  <m:mtext>kg</m:mtext>
                </m:mrow>
              </m:mrow>
            
            <m:mrow/>
          </m:mrow>
          <m:annotation encoding="StarMath 5.0"> size 12{6 "." "56" times "10" rSup { size 8{ - 8} } `"kg"} {}</m:annotation>
        </m:semantics>
      </m:math> 
    </para><para id="import-auto-id2977369"><m:math>
        <m:semantics>
          <m:mrow>
            
              <m:mrow>
                <m:mrow>
                  <m:mn>4.37</m:mn>
                  <m:mrow>
                    <m:mo stretchy="false">×</m:mo>
                    <m:msup>
