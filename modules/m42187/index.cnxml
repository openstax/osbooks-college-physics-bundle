                  <m:mn>15.8</m:mn>
                <m:mspace width="0.25em"/>
                  <m:msup>
                    <m:mtext>g/cm</m:mtext>

                      <m:mrow>
                        <m:mn>3</m:mn>
                      </m:mrow>
                  </m:msup>
                </m:mrow>
              </m:mrow>
          </m:mrow>
          
        
      </m:math>
    </para></solution>
