                  <m:mrow>
                    <m:mn>1.22</m:mn>
                    <m:mrow>
                      <m:mo stretchy="false">×</m:mo>
                      <m:msup>
                        <m:mtext>10</m:mtext>

                          <m:mrow>
                            <m:mn>3</m:mn>
                          </m:mrow>

                      </m:msup>
                    </m:mrow><m:mspace width="0.25em"/>
                    <m:mtext>Bq</m:mtext>
