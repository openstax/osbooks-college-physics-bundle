                <m:mtr><m:mtd/>
<m:mtd>                            <m:mo stretchy="false">=</m:mo></m:mtd>
<m:mtd>
                  <m:mrow>
                    
                      <m:mrow>
                        <m:mrow>
                          <m:mrow>
                            <m:mo stretchy="false">(</m:mo>
                            <m:mtext>5.00</m:mtext>
                            <m:mo stretchy="false">×</m:mo>
                            <m:msup>
