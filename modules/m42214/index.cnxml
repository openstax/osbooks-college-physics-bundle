                      <m:mi>T</m:mi>
                      <m:mrow>
                        <m:mtext>K</m:mtext>
                      </m:mrow>
                    </m:msub>
                    <m:mo stretchy="false">=</m:mo>
                    <m:mrow>
                      <m:msub>
                        <m:mi>T</m:mi>
                        <m:mrow>
                          <m:mrow>
                            <m:mtext>º</m:mtext>
