                    <m:mo stretchy="false">=</m:mo>
                    <m:mfrac>
                      <m:mn>9</m:mn>
                      <m:mn>5</m:mn>
                    </m:mfrac>
                  </m:mrow>
                  <m:mrow>
                    <m:msub>
                      <m:mi>T</m:mi>
                      <m:mrow>
                        <m:mrow>
                          <m:mtext>º</m:mtext>
                          <m:mtext>C</m:mtext>
                        </m:mrow>
                      </m:mrow>
                    </m:msub>
                    <m:mo stretchy="false">+</m:mo>
                    <m:mtext>32</m:mtext>
                  </m:mrow>
                </m:mrow>
              </m:mrow>            </m:mrow>
            
          
        </m:math>
      </equation><equation id="eip-659"><m:math>
          
            <m:mrow>
              <m:mrow>
                <m:mrow>
                  <m:mrow>
                    <m:msub>
                      <m:mi>T</m:mi>
                      <m:mrow>
                        <m:mrow>
                          <m:mtext>º</m:mtext>
                          <m:mtext>C</m:mtext>
                        </m:mrow>
                      </m:mrow>
                    </m:msub>
                    <m:mo stretchy="false">=</m:mo>
                    <m:mfrac>
                      <m:mn>5</m:mn>
                      <m:mn>9</m:mn>
                    </m:mfrac>
                  </m:mrow>
                  <m:mfenced open="(" close=")">
                    <m:mrow>
                      <m:msub>
                        <m:mi>T</m:mi>
                        <m:mrow>
                          <m:mrow>
                            <m:mtext>º</m:mtext>
