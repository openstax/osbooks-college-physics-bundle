<m:mtd/>
<m:mtd><m:mo stretchy="false">=</m:mo></m:mtd>
<m:mtd><m:mfrac><m:mn>9</m:mn><m:mn>5</m:mn></m:mfrac><m:mfenced open="(" close=")"><m:mrow><m:msub><m:mi>T</m:mi><m:mrow><m:mn>2</m:mn></m:mrow></m:msub><m:mrow><m:mfenced open="(" close=")"><m:mrow><m:mtext>º</m:mtext><m:mtext>C</m:mtext></m:mrow></m:mfenced><m:mo stretchy="false">−</m:mo><m:msub><m:mi>T</m:mi><m:mrow><m:mn>1</m:mn></m:mrow></m:msub></m:mrow><m:mfenced open="(" close=")"><m:mrow><m:mtext>º</m:mtext><m:mtext>C</m:mtext></m:mrow></m:mfenced></m:mrow></m:mfenced><m:mrow><m:mtext/><m:mo stretchy="false">=</m:mo><m:mfrac><m:mn>9</m:mn><m:mn>5</m:mn></m:mfrac></m:mrow><m:mtext>Δ</m:mtext><m:mi fontstyle="italic">T</m:mi><m:mfenced open="(" close=")"><m:mrow><m:mtext>º</m:mtext><m:mtext>C</m:mtext></m:mrow></m:mfenced></m:mtd>
</m:mtr></m:mtable><m:mrow/></m:mrow></m:mrow></m:math></para></solution>
