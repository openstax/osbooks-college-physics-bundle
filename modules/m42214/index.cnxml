                          </m:mrow>
                        </m:mrow>
                      </m:msub>
                      <m:mo stretchy="false">+</m:mo>
                      <m:mtext>273</m:mtext>
                    </m:mrow>
                  </m:mrow>
                  <m:mtext>.</m:mtext>
                  <m:mtext>15</m:mtext>
                </m:mrow>
              </m:mrow>            </m:mrow>
            
          
        </m:math>
      </equation><equation id="eip-936"><m:math>
          
            <m:mrow>
              <m:mrow>
                <m:mrow>
                  <m:mrow>
                    <m:msub>
                      <m:mi>T</m:mi>
                      <m:mrow>
                        <m:mrow>
                          <m:mtext>º</m:mtext>
                          <m:mtext>C</m:mtext>
                        </m:mrow>
                      </m:mrow>
                    </m:msub>
                    <m:mo stretchy="false">=</m:mo>
                    <m:mrow>
                      <m:msub>
