                            </m:mrow>
                          </m:mrow>

                      </m:msup>
                    </m:mrow>
                    <m:mo stretchy="false">+</m:mo>
                    <m:msub>
                      <m:mover accent="true">
                        <m:mi>v</m:mi>
                        <m:mo>¯</m:mo>
                      </m:mover>

                        <m:mrow>
