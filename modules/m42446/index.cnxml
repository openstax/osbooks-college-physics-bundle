    <para id="import-auto-id1169738253676">(b) <m:math><m:semantics><m:mrow><m:mrow><m:mrow><m:msubsup><m:mi fontstyle="italic">I∝E</m:mi><m:mrow><m:mn>0</m:mn></m:mrow><m:mrow><m:mn>2</m:mn></m:mrow></m:msubsup><m:mtext>, </m:mtext><m:mspace width="0.25em"/><m:msubsup><m:mi>B</m:mi><m:mrow><m:mn>0</m:mn></m:mrow><m:mrow><m:mn>2</m:mn></m:mrow></m:msubsup><m:mo stretchy="false">⇒</m:mo><m:msubsup><m:mi>E</m:mi><m:mrow><m:mn>0</m:mn></m:mrow><m:mrow><m:mn>2</m:mn></m:mrow></m:msubsup><m:mtext>, </m:mtext><m:mspace width="0.25em"/><m:msubsup><m:mi>B</m:mi><m:mrow><m:mn>0</m:mn></m:mrow><m:mrow><m:mn>2</m:mn></m:mrow></m:msubsup><m:mi>∝</m:mi><m:mfrac><m:mn>1</m:mn><m:msup><m:mi>r</m:mi><m:mrow><m:mn>2</m:mn></m:mrow></m:msup></m:mfrac><m:mo stretchy="false">⇒</m:mo><m:msub><m:mi>E</m:mi><m:mrow><m:mn>0</m:mn></m:mrow></m:msub><m:mi>,</m:mi><m:mspace width="0.25em"/><m:msub><m:mi>B</m:mi><m:mrow><m:mn>0</m:mn></m:mrow></m:msub><m:mi>∝</m:mi><m:mfrac><m:mn>1</m:mn><m:mi>r</m:mi></m:mfrac></m:mrow></m:mrow><m:mrow/></m:mrow></m:semantics></m:math></para></solution>
