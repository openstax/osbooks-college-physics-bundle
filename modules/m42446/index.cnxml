                                    <m:mrow>
                                      <m:mrow>
                                        <m:mo stretchy="false">–</m:mo>
                                        <m:mn>12</m:mn>
                                      </m:mrow>
                                    </m:mrow>

                                </m:msup>
                                <m:mrow><m:mspace width="0.25em"/>
                                  <m:mrow>
                                    <m:msup>
                                      <m:mtext>C</m:mtext>

                                        <m:mrow>
                                          <m:mn>2</m:mn>
                                        </m:mrow>

                                    </m:msup>
                                    <m:mo stretchy="false">/</m:mo>
                                    <m:mtext>N</m:mtext>
                                  </m:mrow>
                                  <m:mo stretchy="false">⋅</m:mo>
                                  <m:msup>
                                    <m:mtext>m</m:mtext>

