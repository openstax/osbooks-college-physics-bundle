                        </m:mrow>
                        <m:mtext>.</m:mtext>
                        <m:mrow>
                          <m:mtext>013</m:mtext>
                          <m:mo stretchy="false">×</m:mo>
                          <m:msup>
                            <m:mtext>10</m:mtext>
                            <m:mrow>
                              <m:mn>5</m:mn>
                            </m:mrow>
