       <m:mrow>
        <m:mrow>
         <m:mrow><m:mn>Δ</m:mn>
          <m:mi mathvariant="italic">
V
          </m:mi>
          <m:mo stretchy="false">
=
          </m:mo>
          <m:msub>
           <m:mi>
V
           </m:mi>
