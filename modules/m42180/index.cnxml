                            </m:mrow>
                      </m:msup>
                    </m:mrow>                  </m:mrow>
                    <m:mo stretchy="false">=</m:mo>
                    <m:mtext>5.42</m:mtext>
                  <m:mfrac>
                    <m:mtext>rad</m:mtext>
                    <m:mtext>s</m:mtext>
