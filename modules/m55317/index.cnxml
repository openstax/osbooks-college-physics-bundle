                      </m:mrow><m:mspace width="0.25em"/>
                      <m:mtext>kg</m:mtext>
                      <m:mo stretchy="false">)</m:mo>
                      <m:mo stretchy="false">(</m:mo>
                      <m:mn>1.67</m:mn>
                      <m:mrow>
                        <m:mo stretchy="false">×</m:mo>
                        <m:msup>
                          <m:mtext>10</m:mtext>
                            <m:mrow>
                              <m:mtext>–27</m:mtext>
                            </m:mrow>
                        </m:msup>
                      </m:mrow><m:mspace width="0.25em"/>
                      <m:mtext>kg</m:mtext>
                      <m:mo stretchy="false">)</m:mo>
                    </m:mrow>
                    <m:mrow>
                      <m:mo stretchy="false">(</m:mo>
                      <m:mn>0.530</m:mn>
                      <m:mrow>
                        <m:mo stretchy="false">×</m:mo>
                        <m:msup>
                          <m:mtext> 10</m:mtext>
                            <m:mrow>
                              <m:mtext>–10</m:mtext>
                            </m:mrow>
                        </m:msup>
                      </m:mrow><m:mspace width="0.25em"/>
                      <m:mtext>m</m:mtext>
                      <m:msup>
