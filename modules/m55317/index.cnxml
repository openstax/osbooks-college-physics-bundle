                    <m:mrow><m:mo>|</m:mo>
                      <m:msub>
                        <m:mi>q</m:mi>

                          <m:mrow>
                            <m:mn>1</m:mn>
                          </m:mrow>

                      </m:msub>
                      <m:msub>
