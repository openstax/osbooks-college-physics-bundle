                  </m:mrow>
                  <m:mo stretchy="false">)</m:mo>
                </m:mrow>
              </m:mrow>
                    <m:mo stretchy="false">×</m:mo>

              <m:mrow>
                <m:mrow>
                  <m:mfrac>
                    <m:mrow>
                      <m:mo stretchy="false">(</m:mo>
                      <m:mn>9.11</m:mn>
                      <m:mrow>
                        <m:mo stretchy="false">×</m:mo>
                        <m:msup>
                          <m:mtext> 10</m:mtext>
                            <m:mrow>
                              <m:mtext>–31</m:mtext>
                            </m:mrow>
