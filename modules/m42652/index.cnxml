  <item>1.5<emphasis effect="italics">E</emphasis> J</item>
  <item><emphasis effect="italics">E</emphasis> J</item>
  <item>0.75<emphasis effect="italics">E</emphasis> J</item>
  <item>0.67<emphasis effect="italics">E</emphasis> J</item>
