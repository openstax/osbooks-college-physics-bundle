        <m:semantics>
          <m:mrow>

              <m:mrow>
                <m:mrow>
                  <m:mrow>
                    <m:mrow>
                      <m:mrow>
                        <m:mrow>
                          <m:mrow>
                            <m:mi>m</m:mi>
                            <m:mo stretchy="false">=</m:mo>
                            <m:mfrac>
                              <m:msub>
                                <m:mi>h</m:mi>

                                  <m:mrow>
                                    <m:mtext>i</m:mtext>
                                  </m:mrow>

                              </m:msub>
                              <m:msub>
                                <m:mi>h</m:mi>

                                  <m:mrow>
                                    <m:mtext>o</m:mtext>
                                  </m:mrow>

                              </m:msub>
                            </m:mfrac>
                          </m:mrow>
                          <m:mo stretchy="false">=</m:mo>
                          <m:mrow>
                            <m:mo stretchy="false">−</m:mo>
                            <m:mfrac>
                              <m:msub>
                                <m:mi>d</m:mi>

                                  <m:mrow>
                                    <m:mtext>i</m:mtext>
                                  </m:mrow>

                              </m:msub>
                              <m:msub>
                                <m:mi>d</m:mi>

                                  <m:mrow>
                                    <m:mtext>o</m:mtext>
                                  </m:mrow>

                              </m:msub>
                            </m:mfrac>
                          </m:mrow>
                        </m:mrow>
                        <m:mo stretchy="false">=</m:mo>
                        <m:mrow>
                          <m:mo stretchy="false">−</m:mo>
                          <m:mfrac>
                            <m:mrow>
                              <m:mo stretchy="false">−</m:mo>
                              <m:msub>
                                <m:mi>d</m:mi>

                                  <m:mrow>
                                    <m:mtext>o</m:mtext>
                                  </m:mrow>

                              </m:msub>
                            </m:mrow>
                            <m:msub>
