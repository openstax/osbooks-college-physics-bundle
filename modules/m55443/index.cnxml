                                </m:mrow>

                            </m:msub>
                          </m:mfrac>
                        </m:mrow>
                      </m:mrow>
                      <m:mo stretchy="false">=</m:mo>
                      <m:mfrac>
                        <m:msub>
                          <m:mi>d</m:mi>

                            <m:mrow>
                              <m:mtext>o</m:mtext>
                            </m:mrow>

                        </m:msub>
                        <m:msub>
