                </m:mstyle>
                <m:mrow>
                  <m:mrow>
                    <m:mo stretchy="false">∣</m:mo>
                    <m:mi>h</m:mi>
                    <m:mo stretchy="false">∣</m:mo>
                  </m:mrow>
                  <m:mo stretchy="false">=</m:mo>
                  <m:mfrac>
                    <m:mn>1</m:mn>
                    <m:mn>2</m:mn>
                  </m:mfrac>
                </m:mrow>
                <m:mstyle>
                  <m:mrow>
                    <m:msup>
                      <m:mtext fontstyle="italic">mv</m:mtext>
                      <m:mrow>
                        <m:mn>2</m:mn>
