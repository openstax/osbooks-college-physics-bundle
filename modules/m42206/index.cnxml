                    <m:mi fontstyle="italic">ρv</m:mi>

                      <m:mrow>
                        <m:mn>2</m:mn>
                      </m:mrow>



                        <m:mrow>
                          <m:mn>2</m:mn>
                        </m:mrow>
                                        </m:msubsup>
                               <m:mrow>
       <m:mo stretchy="false">−</m:mo>
                    <m:mfrac>
                      <m:mn>1</m:mn>
                      <m:mn>2</m:mn>
                    </m:mfrac>
                  </m:mrow>
                  <m:msubsup>
                    <m:mi fontstyle="italic">ρv</m:mi>

                      <m:mrow>
                        <m:mn>1</m:mn>
                      </m:mrow>



                        <m:mrow>
                          <m:mn>2</m:mn>
                        </m:mrow></m:msubsup>
                                      <m:mrow>
                    <m:mo stretchy="false">=</m:mo>
                    <m:mrow>
                      <m:msub>
                        <m:mi>P</m:mi>

                          <m:mrow>
