                                <m:msup>
                                  <m:mo stretchy="false">)</m:mo>

                                    <m:mrow>
                                      <m:mn>2</m:mn>
                                    </m:mrow>

                                </m:msup>
                              </m:mrow>
                              <m:msup>
                                <m:mi>c</m:mi>

                                  <m:mrow>
