    <para id="import-auto-id1563389">(b) <m:math><m:mrow><m:mrow><m:mrow><m:mrow><m:mstyle fontstyle="italic"><m:mrow><m:mtext>nRT</m:mtext></m:mrow></m:mstyle><m:mo stretchy="false">=</m:mo><m:mo stretchy="false">(</m:mo></m:mrow><m:mtext>mol</m:mtext><m:mo stretchy="false">)</m:mo><m:mo stretchy="false">(</m:mo><m:mrow><m:mtext>cal/mol</m:mtext><m:mo stretchy="false">⋅</m:mo><m:mtext>K</m:mtext></m:mrow><m:mo stretchy="false">)</m:mo><m:mo stretchy="false">(</m:mo><m:mtext>K</m:mtext><m:mrow><m:mo stretchy="false">)</m:mo><m:mo stretchy="false">=</m:mo><m:mtext> cal</m:mtext></m:mrow></m:mrow></m:mrow></m:mrow></m:math></para>
    <para id="import-auto-id2409504">(c) <m:math><m:mrow><m:mrow><m:mtable columnalign="left"><m:mtr>
<m:mtd><m:mstyle fontstyle="italic"><m:mrow><m:mtext>nRT</m:mtext></m:mrow></m:mstyle></m:mtd>
<m:mtd><m:mo stretchy="false">=</m:mo></m:mtd>
<m:mtd><m:mo stretchy="false">(</m:mo><m:mtext>mol</m:mtext><m:mo stretchy="false">)</m:mo><m:mo stretchy="false">(</m:mo><m:mrow><m:mrow><m:mtext>L</m:mtext><m:mo stretchy="false">⋅</m:mo><m:mtext>atm/mol</m:mtext></m:mrow><m:mo stretchy="false">⋅</m:mo><m:mtext>K</m:mtext></m:mrow><m:mo stretchy="false">)</m:mo><m:mo stretchy="false">(</m:mo><m:mtext>K</m:mtext><m:mo stretchy="false">)</m:mo></m:mtd>
</m:mtr><m:mtr>
<m:mtd/>
<m:mtd><m:mo stretchy="false">=</m:mo></m:mtd>
<m:mtd><m:mrow><m:mtext> L</m:mtext><m:mo stretchy="false">⋅</m:mo><m:mtext>atm</m:mtext></m:mrow><m:mo stretchy="false">=</m:mo><m:mo stretchy="false">(</m:mo><m:msup><m:mtext>m</m:mtext><m:mrow><m:mn>3</m:mn></m:mrow></m:msup><m:mo stretchy="false">)</m:mo><m:mo stretchy="false">(</m:mo><m:msup><m:mtext>N/m</m:mtext><m:mrow><m:mn>2</m:mn></m:mrow></m:msup><m:mo stretchy="false">)</m:mo></m:mtd>
